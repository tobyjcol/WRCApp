<!DOCTYPE html>
<html>
<head>
    <title>Samaritan House</title>
    <meta name="description" content="Samaritan House">
    <meta name="keywords" content="Samaritan House">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/font-awesome.min.css" rel="stylesheet">

    <script src="/js/jquery.js"></script>
</head>

<body>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div>
                <div class="logo">
                    <h1><i class="fa fa-home"></i> Samaritan House</h1>
                </div>
            </div>
        </div>
    </div>
    <div id="workersList">
        <div id="row" class="text-right">
            <div id="col-md-12" >
                <button type="button" class="btn btn-primary-outline">Edit</button>
                <button type="button" class="btn btn-primary-outline">Delete</button>
            </div>
        </div>
        <script>
            $.getJSON( "/v1/wrc/workers", function(results) {
                console.log("Number Workers:" + results.res.length);
                console.log(results);
                var i = 0;
                while (i < results.res.length) {
                    $("#workersList").append("<div class='row'><div class='col-md-9'><input type='checkbox' value=" + results.res[i].WorkerID + ">" + results.res[i].FirstName + " " + results.res[i].LastName +"</div><div class='col-md-3'></div>");
                    i++;
                }
            });
        </script>
    </div>
</body>
</html>


